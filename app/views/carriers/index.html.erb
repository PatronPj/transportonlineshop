<p id="notice"><%= notice %></p>

<h1>Carriers</h1>

<table>
  <thead>
    <tr>
      <th>Surname</th>
      <th>Lastname</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carriers.each do |carrier| %>
      <tr>
        <td><%= carrier.surname %></td>
        <td><%= carrier.lastname %></td>
        <td><%= carrier.description %></td>
        <td><%= carrier.price %></td>
        <td><%= link_to 'Show', carrier %></td>
        <td><%= link_to 'Edit', edit_carrier_path(carrier) %></td>
        <td><%= link_to 'Destroy', carrier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Carrier', new_carrier_path %>
